#!/usr/bin/env sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!
- Text color reflects charge left" ;;
esac

capacity=$(cat /sys/class/power_supply/"$1"/capacity) || exit
status=$(cat /sys/class/power_supply/"$1"/status)

battery_icon="ï•¸ "

if [ "$capacity" -eq 100 ]; then
	color="#10ff00"
elif [ "$capacity" -ge 90 ]; then
	color="#40ff00"
	[ "$status" = "Discharging" ] && battery_icon="ï– "
elif [ "$capacity" -ge 80 ]; then
	color="#80ff00"
	[ "$status" = "Discharging" ] && battery_icon="ï–€ "
elif [ "$capacity" -ge 70 ]; then
	color="#c0ff00"
	[ "$status" = "Discharging" ] && battery_icon="ï•¿ "
elif [ "$capacity" -ge 60 ]; then
	color="#f0ff00"
	[ "$status" = "Discharging" ] && battery_icon="ï•¾ "
elif [ "$capacity" -ge 50 ]; then
	color="#ffff00"
	[ "$status" = "Discharging" ] && battery_icon="ï•½ "
elif [ "$capacity" -ge 40 ]; then
	color="#fff000"
	[ "$status" = "Discharging" ] && battery_icon="ï•¼ "
elif [ "$capacity" -ge 30 ]; then
	color="#ffc000"
	[ "$status" = "Discharging" ] && battery_icon="ï•» "
elif [ "$capacity" -ge 20 ]; then
	color="#ff8000"
	[ "$status" = "Discharging" ] && battery_icon="ï•º "
elif [ "$capacity" -ge 10 ]; then
	color="#ff4000"
	[ "$status" = "Discharging" ] && battery_icon="ï•¹ "
else
	color="#ff1000"
	[ "$status" = "Discharging" ] && battery_icon="ï–‚ "
fi

[ "$status" = "Charging" ] && color="#00ff00" && battery_icon="ï–ƒ "
[ "$status" = "Unknown" ] && battery_icon="ï– "
[ "$status" = "Not Charging" ] && battery_icon="ğŸ›‘ "

printf "<span color='%s'>%s%s</span>\n" "$color" "$battery_icon" "$(echo "$capacity" | sed -e 's/$/%/')"
